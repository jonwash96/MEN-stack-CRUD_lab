<% String.prototype.toTitleCase = function() {const words = this.split(' ');words.forEach(word => {if (!word.charAt(0).match(/\*/)) {word = word.charAt(0).toUpperCase() + word.substring(1).toLowerCase();} else word.replace('*', '');return words.join(' ').trim();})} %>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <% let useTitle; try {useTitle = title.toTitleCase()} catch {useTitle = "CRM App"}; %>
    <title><%= useTitle %></title>
    <link rel="stylesheet" href="/style.css" />
    <script defer type="text/javascript" src="/script.js"></script>
    <script defer type="text/javascript" src="/incision-lite.js"></script>
</head>